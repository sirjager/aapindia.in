{
  "name": "aapindia.in",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write . && tsc --incremental --pretty --noemit && prettier --check . && eslint src/ --fix",
    "codegen": "graphql-codegen --require dotenv/config --config codegen.ts",
    "pagefind": "pagefind --site dist/client --output-subdir _pagefind",
    "dev:pagefind": "pagefind --site dist/client --output-subdir ../../public/_pagefind",
    "docker:build": "docker build --compress --pull --rm -f Dockerfile -t ghcr.io/sirjager/aapindia.in:latest .",
    "docker:push": "docker push ghcr.io/sirjager/aapindia.in:latest"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/node": "^8.0.0",
    "@astrojs/partytown": "^2.0.4",
    "@astrojs/sitemap": "^3.0.5",
    "@astrojs/tailwind": "^5.1.0",
    "@builder.io/qwik": "^1.4.0",
    "@markdoc/markdoc": "^0.4.0",
    "@qwikdev/astro": "^0.4.4",
    "@unpic/qwik": "^0.0.41",
    "@urql/core": "^4.2.3",
    "astro": "^4.2.1",
    "astro-icon": "^1.0.4",
    "astro-imagetools": "^0.9.0",
    "astro-robots-txt": "^1.0.0",
    "cheerio": "1.0.0-rc.12",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "github-slugger": "^2.0.0",
    "pagefind": "^1.0.4",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.3.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/eslint": "^8.56.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "astro-compress": "2.2.9",
    "autoprefixer": "^10.4.17",
    "daisyui": "^4.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.3",
    "eslint-plugin-qwik": "^1.3.5",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "lodash": "^4.17.21",
    "postcss-import": "^16.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "arrowParens": "always",
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  },
  "lint-staged": {
    "./**/*.{ts,tsx,js,jsx,astro,html}": [
      "eslint --fix"
    ],
    "./**/*.{ts,tsx,js,jsx,svg,json,yaml,cjs,md,mdx,css,astro,html}": [
      "prettier --write"
    ]
  }
}
